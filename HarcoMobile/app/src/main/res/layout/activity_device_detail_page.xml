<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appColor"
    tools:context=".ActivityCatsDetailPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-3dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/catImageIV"
            android:layout_width="194dp"
            android:layout_height="197dp"
            android:layout_marginHorizontal="120dp"
            android:layout_marginVertical="40dp"
            android:layout_marginRight="120dp"
            android:scaleType="fitStart"
            android:src="@drawable/ps" />

        <TextView
            android:id="@+id/detailCatNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/font1"
            android:text="Device 1"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/detailCatPriceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/font1"
            android:text="Rp 300.000"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:fillViewport="true"
            android:scrollbars="vertical"
            app:layout_constraintHeight_max="10000dp">

            <TextView
                android:id="@+id/detailCatDescTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font1"
                android:background="#bbd3c0"
                android:text="lorem ipsum"
                android:textColor="@color/black" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <EditText
            android:id="@+id/quantityET"
            android:background="#bbd3c0"
            android:paddingHorizontal="10dp"
            android:textColorHint="#C4FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black"
            android:inputType="number"
            android:fontFamily="@font/font1"
            android:hint="Input Quantity"
            android:layout_weight="1"

            />

        <Button
            android:id="@+id/purchaseBtn"
            android:text="BUY"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/black"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            app:cornerRadius="30dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font1"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>