<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appColor"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/txtPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="32sp"
        android:textColor="@color/teal_700"
        android:fontFamily="@font/font1"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/isi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Harco Mobile adalah platform e-commerce yang didedikasikan untuk menjual berbagai macam perangkat elektronik dan gadget terbaru. Menggabungkan kemudahan berbelanja online dengan beragam pilihan produk, Harco Mobile menyediakan pengalaman belanja yang lengkap dan menyenangkan bagi para pengguna yang mencari perangkat terkini."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="gravity"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


</LinearLayout>